   color:#FFF;
   font-weight:bold;
}
#nav ul li.active a {
   color:#fff;
   background:#000;
}
#nav ul li a:hover {
   background:#000; /* Top menu items background colour */
   color:#fff;
   opacity: 1;
   transition: all .3s ease-in-out;
    -webkit-transition: all .3s ease-in-out;
 	-moz-transition: all .3s ease-in-out;
 	-ms-transition: all .3s ease-in-out;
	-o-transition: all .3s ease-in-out;  
}
#nav ul li:hover a,
#nav ul li.hover a { /* This line is required for IE 6 and below */
  /* background:#36f;*/ /* Top menu items background colour */
   color:#fff;
/*   border-bottom:1px solid #03f;*/
}

/* Submenu items */
#nav ul ul {
   display:none; /* Sub menus are hiden by default */
   position:absolute;
   top:31px;
   left:0;
   right:auto; /*resets the right:50% on the parent ul */
   width:10em; /* width of the drop-down menus */
}
#nav ul ul li {
   left:auto;  /*resets the left:50% on the parent li */
   margin:0; /* Reset the 1px margin from the top menu */
   clear:left;
   width:100%;
}
#nav ul ul li a,
#nav ul li.active li a,
#nav ul li:hover ul li a,
#nav ul li.hover ul li a { /* This line is required for IE 6 and below */
   font-size:.8em;
   font-weight:normal; /* resets the bold set for the top level menu items */
   background:#000;
   color:#FFF;
   opacity: 0.8;
   line-height:1.4em; /* overwrite line-height value from top menu */
}
#nav ul li:hover ul.last li a {
	padding:2px 0 0 7px;
}
#nav ul ul li a:hover,
#nav ul li.active ul li a:hover,
#nav ul li:hover ul li a:hover,
#nav ul li.hover ul li a:hover { /* This line is required for IE 6 and below */
   background:#006699; /* Sub menu items background colour */
   color:#fff;
}

/* Flip the last submenu so it stays within the page */
#nav ul ul.last {
   left:auto; /* reset left:0; value */
   right:0; /* Set right value instead */
   width: 48px;
}

/* Make the sub menus appear on hover */
#nav ul li:hover ul,
#nav ul li.hover ul { /* This line is required for IE 6 and below */ 
display: block;
}

